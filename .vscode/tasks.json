{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "label": "CUDA: nvcc 调试",
            "type": "shell",
            "command": "nvcc",
            "args": ["-g","-G","-o","${fileDirname}/test","${file}"]
        },
        {
            "label": "CUDA: nvcc 编译并运行",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "nvcc -o ${fileDirname}/${fileBasenameNoExtension} ${file} && ${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }   
    ],
    "version": "2.0.0"
}