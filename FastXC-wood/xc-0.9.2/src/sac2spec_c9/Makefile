# Compiler and linker options
CC=gcc

CFLAGS=-Wall -O0 -g

NVCC=/usr/local/cuda/bin/nvcc
LFLAG=-L/usr/local/cuda/lib64  -lcufft -lcudart -lm

CUDAOBJS=cuda.alloc_c9.o \
	cuda.rdcrtr.o \
	cuda.util.o \
	cuda.misc.o \
	cuda.smooth.o \
	cuda.processing_c9.o \
	cuda.taper.o \
	cuda.main.o \

OBJS=design_filter_response.o \
	arguproc.o \
	cal_nseg.o \
	par_read_sac_c9.o \
	par_write_spec_c9.o \
	read_filelist.o \
	sacio.o \
	util.o \
	
BINDIR=../../bin
PROG=$(BINDIR)/sac2spec_c9

all: $(BINDIR) $(PROG)

$(BINDIR):
	mkdir -p $(BINDIR)

# Add -G flag for device debuggin info
NVCCFLAGS = -g -G

$(PROG):$(OBJS) $(CUDAOBJS)
	$(NVCC) $(NVCCFLAGS) -o $@ $^ $(LFLAG)

%.o: %.c
	$(CC) $(CFLAGS) -c $<

%.o: %.cu 
	$(NVCC) $(NVCCFLAGS) -c $<

.PHONY: clean veryclean

clean:
	-rm *.o

veryclean:
	-rm $(PROG) *.o 
